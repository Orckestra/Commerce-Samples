<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="14.0" DefaultTargets="Build" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <Target Name="AfterBuild">
    <ItemGroup>
      <InstallerFiles Include="$(TargetPath);$(TargetDir)$(TargetName).pdb" />
      <ResourceInstallerFiles Include="$(TargetDir)\**\$(TargetName).resources.dll" />
    </ItemGroup>
    <Copy SourceFiles="@(InstallerFiles)" SkipUnchangedFiles="true" DestinationFolder="$(SolutionDir)src\FulfillmentProviders\artifacts\OOE"  />
    <Copy SourceFiles="@(InstallerFiles)" SkipUnchangedFiles="true" DestinationFolder="$(SolutionDir)src\FulfillmentProviders\artifacts\OCS\bin" />
    <Copy SourceFiles="@(ResourceInstallerFiles)" SkipUnchangedFiles="true" DestinationFiles="@(ResourceInstallerFiles->'$(SolutionDir)src\FulfillmentProviders\artifacts\OOE\%(RecursiveDir)%(Filename)%(Extension)')" />
    <Copy SourceFiles="@(ResourceInstallerFiles)" SkipUnchangedFiles="true" DestinationFiles="@(ResourceInstallerFiles->'$(SolutionDir)src\FulfillmentProviders\artifacts\OCS\bin\%(RecursiveDir)%(Filename)%(Extension)')" />
  </Target>
</Project>